<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="260dp"
    android:background="#ffffff"
    >

    <TextView
        android:text="LOGIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_margin="5dp"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/signin_tv1"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="#cccccc"
        android:layout_below="@+id/signin_tv1"
        android:paddingTop="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:text="ID"
                android:textSize="15dp"
                android:width="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signin_tv2"
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_margin="10dp"/>

            <EditText
                android:hint="your id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/signIn_userId"
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:text="PW"
                android:textSize="15dp"
                android:width="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signin_tv3"
                android:layout_weight="1"
                android:textColor="#000000"
                android:layout_margin="10dp"/>

            <EditText
                android:hint="your password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/signIn_userPassword"
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:text="saveId"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:id="@+id/checkBox2" />

            <CheckBox
                android:text="autoLogin"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:id="@+id/checkBox" />
        </LinearLayout>

        <Button
            android:text="CONFIRM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signIn_btn"
            android:layout_margin="10dp"/>
    </LinearLayout>

</RelativeLayout>